#!/bin/ash
curl -f 'http://napirajz.hu' >tmp 2>/dev/null
if [ $? != 0 ]; then
  cat index.html~
  rm tmp
  exit 1
fi
PICS=`cat tmp | sed -nr 's,^.+<img src=\"(/files/[A-Za-z0-9_.]+)\".+$,http://napirajz.hu\1,p'`
rm tmp
rm -f *.jp*
echo '<html>'
echo '<head><title>subogero napi</title></head>'
echo '<body>'
echo '<h1 align="center">subogero napi</h1>'
echo '<hr>'
for i in $PICS; do
  wget $i
  echo $i | sed -r 's,^.+/([A-Za-z0-9_]+)(\.[jpeg]+)$,<a href=\"napi/\1\2\">\1</a><br>,'
done
echo '<hr>'
echo '(c) CC - Mer&eacute;nyi D&aacute;niel'
echo '<br>Eredeti: h t t p : / / n a p i r a j z . h u'
echo '<p>'
echo "Ez az oldal azok sz&aacute;m&aacute;ra k&eacute;sz&uuml;lt,"
echo "akiket a c&eacute;ges internet proxy megfosztott a napi rajz"
echo "ny&uacute;jtotta inspir&aacute;ci&oacute;t&oacute;l."
echo '<hr>'
echo '<p>Friss&iacute;tve:'
date "+%Y.%m.%d %H:%M"
echo '</body>'
echo '</html>'
cp -f index.html index.html~
